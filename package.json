{
	"name": "dm-langclient",
	"displayName": "DreamMaker Language Client",
	"description": "Client for DreamMaker language server",
	"publisher": "platymuus",
	"author": "SpaceManiac",
	"license": "GPL-3.0",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/SpaceManiac/SpacemanDMM/"
	},
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:dm"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "dm",
				"extensions": [
					".dm",
					".dme",
					".dmm"
				]
			}
		],
		"commands": [
			{
				"command": "dreammaker.restartLangserver",
				"title": "Restart language server",
				"category": "DreamMaker"
			}
		],
		"configuration": {
			"type": "object",
			"title": "DreamMaker language client configuration",
			"properties": {
				"dreammaker.autoUpdate": {
					"type": "boolean",
					"default": null,
					"description": "Enables or disables server auto-updates."
				},
				"dreammaker.langserverPath": {
					"type": "string",
					"default": null,
					"description": "Sets the path to the dm-langserver executable."
				},
				"dreammaker.maxProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"node-fetch": "^2.1.1",
		"vscode": "^1.1.13",
		"vscode-languageclient": "^3.5.1"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"tslint": "^5.8.0",
		"@types/node": "^7.0.43",
		"@types/node-fetch": "^1.6.7",
		"@types/mkdirp": "^0.5.2"
	}
}
