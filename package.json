{
	"name": "dm-langclient",
	"displayName": "DreamMaker Language Client",
	"description": "Client for DreamMaker language server",
	"publisher": "SpaceManiac",
	"author": "Tad Hardesty",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/SpaceManiac/SpacemanDMM/"
	},
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:dm"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "DreamMaker language client configuration",
			"properties": {
				"dreammaker.langserverPath": {
					"type": "string",
					"default": "dm-langserver",
					"description": "Sets the path to the dm-langserver executable."
				},
				"dreammaker.maxProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.5.0"
	}
}
