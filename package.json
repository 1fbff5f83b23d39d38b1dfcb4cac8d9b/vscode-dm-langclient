{
	"name": "dm-langclient",
	"displayName": "DreamMaker Language Client",
	"description": "Client for DreamMaker language server",
	"publisher": "platymuus",
	"author": "SpaceManiac",
	"license": "GPL-3.0",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/SpaceManiac/SpacemanDMM/"
	},
	"engines": {
		"vscode": "^1.23.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:dm"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "dm",
				"extensions": [
					".dm",
					".dme",
					".dmm"
				]
			}
		],
		"commands": [
			{
				"command": "dreammaker.restartLangserver",
				"title": "Restart language server",
				"category": "DreamMaker"
			},
			{
				"command": "dreammaker.toggleTicked",
				"title": "Toggle Tick",
				"category": "DreamMaker"
			},
			{
				"command": "dreammaker.openReference",
				"title": "Open DM Reference",
				"category": "DreamMaker"
			}
		],
		"configuration": {
			"type": "object",
			"title": "DreamMaker language client configuration",
			"properties": {
				"dreammaker.autoUpdate": {
					"type": "boolean",
					"default": null,
					"description": "Enables or disables server auto-updates."
				},
				"dreammaker.langserverPath": {
					"type": "string",
					"default": null,
					"description": "Sets the path to the dm-langserver executable."
				},
				"dreammaker.maxProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"dreammaker.byondPath": {
					"type": "string",
					"default": null,
					"description": "Sets the path to the BYOND installation."
				},
				"dreammaker.tickOnCreate": {
					"type": "boolean",
					"default": null,
					"description": "Automatically ticks newly created code files if set."
				}
			}
		},
		"problemMatchers": [
			{
				"name": "dreammaker",
				"owner": "dreammaker",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^([^:]+):(\\d+):([^:]+): (.*)$",
					"file": 1,
					"line": 2,
					"severity": 3,
					"message": 4
				}
			}
		],
		"taskDefinitions": [
			{
				"type": "dreammaker",
				"properties": {
					"dme": {
						"type": "string",
						"description": "The environment file to compile"
					}
				},
				"required": [
					"dme"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"node-fetch": "^2.1.2",
		"vscode": "^1.1.17",
		"vscode-languageclient": "^3.5.1"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^7.0.64",
		"@types/node-fetch": "^1.6.9",
		"tslint": "^5.10.0",
		"typescript": "^2.8.3"
	}
}
