{
	"name": "dm-langclient",
	"displayName": "DreamMaker Language Client",
	"description": "Client for DreamMaker language server",
	"publisher": "platymuus",
	"author": "SpaceManiac",
	"license": "GPL-3.0-or-later",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/SpaceManiac/SpacemanDMM/"
	},
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:dm"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [{
			"id": "dm",
			"extensions": [".dm", ".dme", ".dmm"]
		}],
		"configuration": {
			"type": "object",
			"title": "DreamMaker language client configuration",
			"properties": {
				"dreammaker.langserverPath": {
					"type": "string",
					"default": "",
					"description": "Sets the path to the dm-langserver executable."
				},
				"dreammaker.maxProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.13",
		"vscode-languageclient": "^3.5.1"
	}
}
